    * esta é a página principal do blog

-->

<%- include("../../partials/header.ejs") %>
<%- include("../../partials/homenavbar.ejs") %>
<body>
    
    <div class="container">
        <br>
        <% result.articles.rows.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <!-- Passa o slug para redirecionar para a página de leitura-->
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler o artigo</a>
                </div>
            </div><br>
        <% }); %>
        
            <hr>
            <div class="row">
                <div class="col-12">
                    <% if(result.next){ %>
                    <a href="/articles/page/<%= result.page + 1 %>" style="text-decoration: none; float: right;">Próxima página >>></a>
                    <% } %>
                    <% if(result.page > 1) { %>
                        <% if(result.page == 2){ %>
                            <a href="/" style="text-decoration: none; float: left;"><<< Página anterior </a> 
                        <% } else { %>
                            <a href="/articles/page/<%= result.page - 1 %>" style="text-decoration: none; float: left;"><<< Página anterior </a>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <hr> 
    </div>
</body>
<%- include("../../partials/footer.ejs") %>